{
  "name": "@ai-dev-template/cli",
  "version": "1.0.0",
  "description": "AI超级个体开发模板系统 - 深度集成Claude Code的标准化开发流程工具",
  "main": "dist/index.js",
  "bin": {
    "ai-dev": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias && npm run copy-assets",
    "build:esbuild": "esbuild src/cli/index.ts --bundle --platform=node --outfile=dist/cli.js --external:@mermaid-js/mermaid-cli --external:puppeteer",
    "copy-assets": "cpx \"assets/**/*\" dist/assets && cpx \"src/**/*.hbs\" dist",
    "dev": "ts-node src/cli/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "cli",
    "template",
    "claude",
    "development",
    "scaffold",
    "generator"
  ],
  "author": "AI Dev Template Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ai-dev-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ai-dev-template/issues"
  },
  "homepage": "https://github.com/yourusername/ai-dev-template#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^10.6.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "simple-git": "^3.21.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "cpx": "^1.5.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
